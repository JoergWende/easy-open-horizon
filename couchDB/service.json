{
  "org": "$HZN_ORG_ID",
  "label": "$SERVICE_NAME for $ARCH",
  "url": "$SERVICE_NAME",
  "version": "$SERVICE_VERSION",
  "arch": "$ARCH",
  "public": true,
  "sharable": "singleton",
  "requiredServices": [],
  "userInput": [
        {
            "name": "COUCHDB_USER",
            "label": "COUCHDB_USER",
            "type": "string",
            "defaultValue": "admin"
        },
        {
            "name": "COUCHDB_PASSWORD",
            "label": "COUCHDB_PASSWORD",
            "type": "string",
            "defaultValue": "password"
        }],
  "deployment": {
    "services": {
      "$SERVICE_NAME": {
        "image": "$SERVICE_CONTAINER",
        "ports": [ 
          { "HostIP": "0.0.0.0", "HostPort": "5984:5984/tcp" }
	],
        "binds": ["couchdb_data:/opt/couchdb/data:rw"]
      }
    }
  }
}

